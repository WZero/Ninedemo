<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    >
<LinearLayout
    android:id="@+id/line1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="20dp">
    <Button
        android:id="@+id/dialog_button1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/style_button_login"
        android:text="1"
        android:textSize="25sp"
        android:layout_margin="1dp"
        android:textColor="@color/select_color1"
        />
    <Button
        android:id="@+id/dialog_button2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/style_button_login"
        android:text="2"
        android:textSize="25sp"
        android:layout_margin="1dp"
        android:textColor="@color/select_color1"/>
    <Button
        android:id="@+id/dialog_button3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/style_button_login"
        android:text="3"
        android:textSize="25sp"
        android:layout_margin="1dp"
        android:textColor="@color/select_color1"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/line2"
        android:layout_below="@+id/line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp">
        <Button
            android:id="@+id/dialog_button4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="4"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
        <Button
            android:id="@+id/dialog_button5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="5"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
        <Button
            android:id="@+id/dialog_button6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="6"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/line3"
        android:layout_below="@+id/line2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        >
        <Button
            android:id="@+id/dialog_button7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="7"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
        <Button
            android:id="@+id/dialog_button8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="8"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
        <Button
            android:id="@+id/dialog_button9"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/style_button_login"
            android:text="9"
            android:textSize="25sp"
            android:layout_margin="1dp"
            android:textColor="@color/select_color1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <at.markushi.ui.CircleButton
            android:id="@+id/circlebutton1"
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:cb_color="@color/select_color1"
            app:cb_pressedRingWidth="8dip"
             />
        <at.markushi.ui.CircleButton
            android:id="@+id/circlebutton2"
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:cb_color="@color/select_color2"
            app:cb_pressedRingWidth="8dip"
             />
        <at.markushi.ui.CircleButton
            android:id="@+id/circlebutton3"
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:cb_color="@color/select_color7"
            app:cb_pressedRingWidth="8dip"
             />
        <at.markushi.ui.CircleButton
            android:id="@+id/circlebutton4"
            android:layout_width="50dip"
            android:layout_height="50dip"
            app:cb_color="@color/select_color8"
            app:cb_pressedRingWidth="8dip"
            />
    </LinearLayout>


</LinearLayout>